/* info12 */
.content-info{
  height: 100%;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.content > swiper{
  width: 100%;
  height: 100%;
 }
page{
  display: flex;
  flex-direction:column;
  background: #ffffff;
  color: #ccc;
  height: 100%;
}
.tab{
  display: flex;
}
.tab-item{
  flex: 1;
  font-size: 10pt;
  text-align: center;
  line-height: 100rpx;
  border-bottom: 6rpx solid #eee;
}
.content{
  flex: 1;
}
.tab-item.active{
  color: #c25b5b;
  border-bottom-color: #c25b5b;
}
.content-info-list{
  font-size: 11pt;
  margin-bottom: 20rpx;
}
.content-info-list > .list-title{
  margin: 10rpx 10rpx;
  margin-top: 10px;
  font-size: 11pt;
  border: 2px solid #ffffff ;
  border-color:#c25b5b ;
  border-bottom-style: none;
  border-top-style: none;
  border-right-style: none;
  padding-left: 10px;
}
.content-info-slide{
  width: 95%;
  height: calc(100vw*9/16);
  margin:0 auto;
}
.mlist{
  display: flex;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 10px;
  padding-top: 6px;
  padding-bottom: 6px;
  padding-left: 5px;
  border: 2px solid #EABDA4;
  border-radius: 20rpx;
  background-color: #EABDA4;
  
}
.mlist1{
  font-size: 16px;
  font-weight: bold;
  color: black;
}
.mlist2{
  color: black;
}

.mlist > text{
  display: block;
  align-self: center;
  position: absolute;
  right: 20px;
  padding-top: 15px;
  padding-bottom: 15px;
  background-color: #EABDA4;
}
/* info3 */
.content-info3{
  height: 100%;
  display: flex;
  font-size: 11pt;
  margin-bottom: 20rpx;
}

.avatar-wrapper {
	width: 80px;
	height:	80px;
	border-radius: 40px;
	padding: 0;
  margin-left: 10px;
  background-color: grey;
}

.avatar {
  width: 80px;
	height:	80px;
	border-radius: 40px;
	border:solid 1px grey;
}
