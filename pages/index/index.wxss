  border-radius: 30rpx;
  color: rgba(255, 255, 255, 0.8);
  width: 120px;
  height: 35px;
  margin-top: 30px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #c25b5b;
  margin-left: 40px;
  border: solid 2px #EABDA4;
