  border-radius: 40rpx;
  margin-top: 5px;
  margin-right: 5px;
  margin-left: 5px;
  padding-top: 10px;
  padding-bottom: 10px;
  display: flex;
}
.toplinetext{
  font-size: 18pt;
  display: block;
  flex: 1;
  padding-left: 8px;
}
.toplinetext2{
  font-size: 12pt;
  display: block;
  flex: 1;
  padding-left: 8px;
}
.infoimg{
  display: block;
}
.movable-area{
  pointer-events:none;
  z-index: 100;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 240px;
  top: 380px;
}
.movable-view{ 
  pointer-events:auto;
  height: 60px;
  width: 60px;
  border-radius: 30px;
  background: #d43c33;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.movable-view>text{
  color: orange;
  font-size: 11pt;
  margin: 0 auto;
}
/* 弹窗 */
.dialog__mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.4); 
  display: none;
  
}

.dialog__container {
  position: fixed;
  bottom: 200rpx;
  width: 650rpx;    
  height: 800rpx;   
  margin-left: 50rpx;
  background: #f8f8f8;
  transform: translateY(300%);  
  transition: all 0.4s ease;
  z-index: 12;
  border-radius: 20rpx;
}

.dialog__show .dialog__container {
  transform: translateY(0);
}

.dialog__show .dialog__mask {
  display: block;
}

