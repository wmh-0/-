.content-info{
	height: 100%;
	margin-top: 60px;
}

.button{
	width: 80%;
	height: 40px;
	position: fixed;
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);
  padding: 10px 20px;
  background-color: #d43c33;
  color: rgba(255, 255, 255, 0.8);
  border: none;
	border-radius: 15px;
	display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.Title{
	width: 100%;
	height: 60px;
	position: fixed;
  top: 0px;
  background-color: #ffffff;
  color: rgba(0, 0, 0);
	border-bottom: solid 2px #c25b5b;
	font-size: 18pt;
	color: #c25b5b;
	display: flex;
  flex-direction: column;
  justify-content: center;
	align-items: left;
	z-index: 1000;
}
.message{
	font-size: 14pt;
	line-height: 1.45;
	letter-spacing: 1px;
	font-weight: normal;
	margin-top: 15px;
}
.joined{
	display: flex;
	font-size: 12pt;
	font-weight: bold;
	margin-top: 20px;
}
.joined>view{
	font-size: 12pt;
	font-style: italic;
	font-weight:normal;
	margin-right: 8px;
}
.address{
	font-size: 16pt;
}
