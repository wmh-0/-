.content{
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: 20px;
}
.avatar-wrapper {
	width: 120px;
	height:	120px;
	border-radius: 60px;
	padding: 0;
	
}

.avatar {
  width: 120px;
	height:	120px;
	border-radius: 60px;
	border:solid 1px grey;
}

.nickname {
  width: 80%;
  height: 100rpx;
  margin: 20px auto;
  border: 1px solid #000000;
  text-align: center;
}
